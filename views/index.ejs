<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes Manager</title>
    
    <!-- Bootstrap & Custom Styles -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f9;
        }
        .container {
            max-width: 800px;
        }
        .note-card {
            transition: 0.3s;
        }
        .note-card:hover {
            transform: scale(1.02);
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <h1 class="text-center text-primary fw-bold">ğŸ“ Notes Manager</h1>

        <!-- Add Note Form -->
        <div class="card shadow p-4 mt-4">
            <h4 class="text-secondary">â• Add a New Note</h4>
            <form action="/add" method="POST" enctype="multipart/form-data">
                <div class="mb-3">
                    <input type="text" class="form-control" name="title" placeholder="Note Title" required>
                </div>
                <div class="mb-3">
                    <textarea class="form-control" name="content" rows="3" placeholder="Write your note..." required></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">ğŸ“ Upload a File (PPT, PDF)</label>
                    <input type="file" class="form-control" name="file">
                </div>
                <div class="mb-3">
                    <label class="form-label">ğŸ“ Link to Page/Slide</label>
                    <input type="number" class="form-control" name="pageNumber" min="1" placeholder="Enter page/slide number">
                </div>
                <button type="submit" class="btn btn-success w-100 btn-lg">ğŸ’¾ Save Note</button>
            </form>
        </div>

        <!-- Notes List -->
        <div class="mt-4">
            <h4 class="text-secondary">ğŸ“Œ Your Notes</h4>
            <% if (notes.length === 0) { %>
                <p class="text-muted text-center mt-3">No notes yet. Start adding some!</p>
            <% } else { %>
                <div class="row">
                    <% notes.forEach(note => { %>
                        <div class="col-md-6">
                            <div class="card shadow-sm p-3 mt-3 note-card">
                                <h5 class="fw-bold"><%= note.title %></h5>
                                <p class="text-muted"><%= note.content %></p>
                                <% if (note.filePath) { %>
                                    <a href="/view-file/<%= note._id %>" class="btn btn-primary btn-sm">ğŸ“‚ View File</a>
                                    <% if (note.pageNumber && note.pageNumber > 0) { %>
                                        <a href="/view-file/<%= note._id %>?page=<%= note.pageNumber %>" class="btn btn-info btn-sm">ğŸ“„ Go to Page <%= note.pageNumber %></a>
                                    <% } %>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
